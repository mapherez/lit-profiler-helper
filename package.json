  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "peerDependencies": {
    "lit": "^2 || ^3"
  },
  "devDependencies": {
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "jsdom": "^26.1.0",
    "lit": "^3.3.0",
    "typescript": "^5",
    "vitest": "^3.2.4"
  }
}
